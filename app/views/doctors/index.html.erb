<h1>Doctors List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Education</th>
      <th>Experience</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.city %></td>
        <td><%= doctor.state %></td>
        <td><%= doctor.zip %></td>
        <td><%= doctor.education %></td>
        <td><%= doctor.experience %></td>
        <%if params[:value].to_s == 'Receptionist'%>
        	<td><%= link_to 'Schedule an appoinment', doctor_show_doctors_list_path(doctor.id,:value => 'Receptionist') %></td>
        <%else%>
        	<td><%= link_to 'Show appoinment', doctor_show_doctors_list_path(doctor.id,:value => 'Doctor') %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path %>
